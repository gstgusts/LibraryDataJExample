@page
@model IndexModel
@{
    ViewData["Title"] = "Book library";
}

<div class="text-center">
    <h1 class="display-4">Search</h1>
</div>

<form method="post">
    <div class="mb-3 row">
        <div class="form-check">
            <input class="form-check-input" type="radio" name="searchType" id="flexRadioDefault1" checked value="T">
            <label class="form-check-label" for="flexRadioDefault1">
                Title
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="searchType" id="flexRadioDefault2" value="D">
            <label class="form-check-label" for="flexRadioDefault2">
                Description
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="searchType" id="flexRadioDefault3" value="G">
            <label class="form-check-label" for="flexRadioDefault3">
                Genre
            </label>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-sm-10">

@*            @if (Model.SearchType == "T" || Model.SearchType == "D")
            {*@
                <input type="text" required class="form-control" name="searchQuery" id="searchQuery" placeholder="Search keyword">
@*            }
            else
            {*@
                <div class="mb-3 row">
                    <div class="col-sm-1">
                        <label class="col-form-label" for="searchGenre">Genre</label>
                    </div>
                    <div class="col-sm-3">
                        <select id="searchGenre" name="searchGenre" class="form-select" aria-label="Default select example">
                            <option value="Fantasy" selected>Fantasy</option>
                            <option value="ScienceFiction">Science Fiction</option>
                            <option value="Mystery">Mystery</option>
                            <option value="Horror">Horror</option>
                            <option value="Romance">Romance</option>
                        </select>
                    </div>
                </div>
@*            }*@
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>


</form>

@foreach (var book in Model.Books)
{
    <p>
        <h2>@book.Title</h2><br>
        <h5>@book.Description</h5>
        @foreach (var author in book.Authors)
        {
            <h6>@author.Name</h6>
        }
    </p>
}
