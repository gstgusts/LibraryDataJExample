@page
@model IndexModel
@{
    ViewData["Title"] = "Book library";
}

<div class="text-center">
    <h1 class="display-4">Search</h1>
</div>

<form method="post">
  <div class="mb-3 row">
    <div class="col-sm-10">
      <input type="text" class="form-control" name="searchQuery" id="searchQuery" placeholder="Title">
    </div>
    <div class="col-sm-2">
       <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </div>
</form>
