@page
@model IndexModel
@{
    ViewData["Title"] = "Book library";
}

<div class="text-center">
    <h1 class="display-4">Search</h1>
</div>

<form method="post" id="mainForm">
    <input type="hidden" value="" id="searchTypeSelected" name="searchTypeSelected"/>
    <div class="mb-3 row">
        <div class="form-check">
            <input onclick="selectSearchType(this)" class="form-check-input" type="radio" name="searchType" id="flexRadioDefault1" @(Model.SearchType == "T" ? "checked" : "") value="T">
            <label class="form-check-label" for="flexRadioDefault1">
                Title
            </label>
        </div>
        <div class="form-check">
            <input onclick="selectSearchType(this)" class="form-check-input" type="radio" name="searchType" id="flexRadioDefault2" @(Model.SearchType == "D" ? "checked" : "") value="D">
            <label class="form-check-label" for="flexRadioDefault2">
                Description
            </label>
        </div>
        <div class="form-check">
            <input onclick="selectSearchType(this)" class="form-check-input" type="radio" name="searchType" id="flexRadioDefault3" @(Model.SearchType == "G" ? "checked" : "") value="G">
            <label class="form-check-label" for="flexRadioDefault3">
                Genre
            </label>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-sm-10">

          @if (Model.SearchType == "T" || Model.SearchType == "D")
            {
                <input type="text" required class="form-control" name="searchQuery" id="searchQuery" placeholder="Search keyword" value="@Model.SearchQuery">
            }
            else
            {
                <div class="mb-3 row">
                    <div class="col-sm-1">
                        <label class="col-form-label" for="searchGenre">Genre</label>
                    </div>
                    <div class="col-sm-3">
                        <select id="searchGenre" name="searchGenre" class="form-select" aria-label="Default select example">
                            @if (Model.SelectedGenre=="Fantasy")
                            {
                                <option value="Fantasy" selected>Fantasy</option>
                            } else
                            {
                                <option value="Fantasy">Fantasy</option>
                            }

                            @if (Model.SelectedGenre=="ScienceFiction")
                            {
                                <option value="ScienceFiction" selected>Science Fiction</option>
                            } else
                            {
                                <option value="ScienceFiction">Science Fiction</option>
                            }

                             @if (Model.SelectedGenre=="Mystery")
                            {
                                <option value="Mystery" selected>Mystery</option>
                            } else
                            {
                                <option value="Mystery">Mystery</option>
                            }

                            @if (Model.SelectedGenre=="Horror")
                            {
                                <option value="Horror" selected>Horror</option>
                            } else
                            {
                                <option value="Horror">Horror</option>
                            }

                            @if (Model.SelectedGenre=="Romance")
                            {
                                <option value="Romance" selected>Romance</option>
                            } else
                            {
                                <option value="Romance">Romance</option>
                            }
                        </select>
                    </div>
                </div>
           }
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

@foreach (var book in Model.Books)
{
    <p>
        <h2>@book.Title</h2><br>
        <h5>@book.Description</h5>
        @foreach (var author in book.Authors)
        {
            <h6>@author.Name</h6>
        }
    </p>
}
