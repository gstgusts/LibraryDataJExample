@page
@model IndexModel
@{
    ViewData["Title"] = "Book library";
}

<div class="text-center">
    <h1 class="display-4">Search</h1>
</div>

<form method="post">
    <div class="mb-3 row">
        <div class="col-sm-10">
            <input type="text" class="form-control" name="searchQuery" id="searchQuery" placeholder="Search keyword">
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="form-check">
            <input class="form-check-input" type="radio" name="searchType" id="flexRadioDefault1" checked value="T">
            <label class="form-check-label" for="flexRadioDefault1">
                 Title
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="searchType" id="flexRadioDefault2" value="D">
            <label class="form-check-label" for="flexRadioDefault2">
                Description
            </label>
        </div>
    </div>
</form>

@foreach (var book in Model.Books)
{
    <p>
        <h2>@book.Title</h2><br>
        <h5>@book.Description</h5>
        @foreach (var author in book.Authors)
        {
            <h6>@author.Name</h6>
        }
    </p>
}
